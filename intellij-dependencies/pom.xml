<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.xtext.idea</groupId>
	<artifactId>intellij-dependencies</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<dependencies>
		<dependency>
			<groupId>com.intellij</groupId>
			<artifactId>annotations</artifactId>
			<version>14.0</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/lib/annotations.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>com.intellij</groupId>
			<artifactId>extensions</artifactId>
			<version>14.0</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/lib/extensions.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>com.intellij</groupId>
			<artifactId>idea_rt</artifactId>
			<version>14.0</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/lib/idea_rt.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>com.intellij</groupId>
			<artifactId>idea</artifactId>
			<version>14.0</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/lib/idea.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>com.intellij</groupId>
			<artifactId>openapi</artifactId>
			<version>14.0</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/lib/openapi.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>com.intellij</groupId>
			<artifactId>util</artifactId>
			<version>14.0</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/lib/util.jar</systemPath>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<descriptor>${project.basedir}/all-assembly.xml</descriptor>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
</project>