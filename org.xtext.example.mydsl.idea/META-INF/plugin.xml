<idea-plugin version="2">
  <id>org.xtext.example.mydsl.idea</id>
  <name>MyDsl language support</name>
  <version>1.0</version>
  <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

  <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
  	  <buildProcess.parametersProvider implementation="org.xtext.example.mydsl.idea.server.MyDslBuildProcessParametersProvider" />
  	  <compileServer.plugin classpath="org.eclipse.emf.common_2.11.0.v20140815-0133.jar;org.eclipse.emf.ecore_2.11.0.v20140815-0133.jar;org.eclipse.emf.ecore.xmi_2.11.0.v20140815-0133.jar;javax.inject_1.0.0.v20091030.jar;com.google.inject_3.0.0.v201312141243.jar;com.google.guava_15.0.0.v201403281430.jar;org.antlr.runtime_3.2.0.v201101311130.jar;org.eclipse.xtext_2.7.0.v201408150954.jar;org.eclipse.xtext.util_2.7.0.v201408150954.jar;org.eclipse.xtext.xbase.lib_2.7.0.v201408150954.jar"/> 
      <!-- Add your extensions here -->
      <fileTypeFactory implementation="org.xtext.example.mydsl.idea.lang.MyDslFileTypeFactory"/>
      <stubElementTypeHolder class="org.xtext.example.mydsl.idea.lang.MyDslElementTypeProvider"/>
      <lang.ast.factory language="org.xtext.example.mydsl.MyDsl" factoryClass="org.xtext.example.mydsl.idea.MyDslExtensionFactory" implementationClass="org.eclipse.xtext.idea.lang.BaseXtextASTFactory"/>
      <lang.parserDefinition language="org.xtext.example.mydsl.MyDsl" factoryClass="org.xtext.example.mydsl.idea.MyDslExtensionFactory" implementationClass="org.xtext.example.mydsl.idea.lang.parser.MyDslParserDefinition"/>
      <lang.findUsagesProvider language="org.xtext.example.mydsl.MyDsl" factoryClass="org.xtext.example.mydsl.idea.MyDslExtensionFactory" implementationClass="org.eclipse.xtext.idea.findusages.BaseXtextFindUsageProvider"/>
      <lang.refactoringSupport language="org.xtext.example.mydsl.MyDsl" factoryClass="org.xtext.example.mydsl.idea.MyDslExtensionFactory" implementationClass="org.eclipse.xtext.idea.refactoring.BaseXtextRefactoringSupportProvider"/>
      <lang.syntaxHighlighterFactory key="org.xtext.example.mydsl.MyDsl" implementationClass="org.xtext.example.mydsl.idea.lang.MyDslSyntaxHighlighterFactory" />
      <stubIndex implementation="org.eclipse.xtext.psi.stubs.PsiNamedEObjectIndex"/>
      <annotator language="org.xtext.example.mydsl.MyDsl" factoryClass="org.xtext.example.mydsl.idea.MyDslExtensionFactory" implementationClass="org.eclipse.xtext.idea.annotation.IssueAnnotator"/>
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
      <!-- Add your project components here -->
      <component>
          <implementation-class>org.eclipse.xtext.idea.resource.PsiFileUpdater</implementation-class>
      </component>
      <component>
      	  <implementation-class>org.eclipse.xtext.idea.build.XtextCompilerComponent</implementation-class>
      </component>
  </project-components>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>